pipeline {
  agent { docker { image 'golang:alpine'} }
  stages {
    stage('Build') {
      environment {
        XDG_CACHE_HOME = '/tmp/.cache'
      }
      steps {
        sh 'go build -o main'
      }
    }
    stage ('Save artifact') {
      steps {
        archiveArtifacts 'main'
      }
    }
  }
}
